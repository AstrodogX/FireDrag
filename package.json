{
  "title": "Fire Drag",
  "name": "firedrag",
  "version": "0.0.9",
  "description": "drag texts and links with/without e10s",
  "main": "index.js",
  "author": "erictsangx@gmail.com",
  "engines": {
    "firefox": ">=40.0a1",
    "fennec": ">=40.0a1"
  },
  "preferences": [
    {
      "name": "searchIn",
      "type": "radio",
      "title": "Search Text in",
      "value": false,
      "options": [
        {
          "value": false,
          "label": "Frontground"
        },
        {
          "value": true,
          "label": "Background"
        }
      ]
    },
    {
      "name": "openIn",
      "type": "radio",
      "title": "Open Link in",
      "value": true,
      "options": [
        {
          "value": false,
          "label": "Frontground"
        },
        {
          "value": true,
          "label": "Background"
        }
      ]
    },
    {
      "type": "integer",
      "name": "threshold",
      "value": 50,
      "title": "Threshold",
      "description": "threshold for dragging distance"
    },
    {
      "type": "control",
      "name": "setEngine",
      "label": "Click",
      "title": "Select Search Engine"
    },
    {
      "name": "selectedSearchEngine",
      "type": "string",
      "title": "selectedSearchEngine",
      "value": "",
      "hidden": true
    }
  ],
  "license": "MIT"
}
